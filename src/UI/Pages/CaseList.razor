@page "/cases"
@using SubrogationDemandManagement.Domain.Models
@using SubrogationDemandManagement.UI.Services
@inject SubrogationApiClient ApiClient

<PageTitle>Subrogation Cases</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Subrogation Cases</h1>
    <button class="btn btn-primary" @onclick="CreateNewCase">
        <span class="oi oi-plus" aria-hidden="true"></span> New Case
    </button>
</div>

@if (isLoading)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (cases == null || !cases.Any())
{
    <div class="alert alert-info">No cases found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Policy Number</th>
                    <th>Loss Date</th>
                    <th>Status</th>
                    <th>Recovery Sought</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cases)
                {
                    <tr>
                        <td>@item.ClaimId</td>
                        <td>@item.PolicyNumber</td>
                        <td>@item.LossDate.ToShortDateString()</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(item.Status)">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.RecoverySought.ToString("C")</td>
                        <td>@item.CreatedAt.ToShortDateString()</td>
                        <td>
                            <a href="/cases/@item.CaseId" class="btn btn-sm btn-outline-primary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<SubrogationCase>? cases;
    private bool isLoading = true;
    // Hardcoded tenant for MVP
    private Guid tenantId = Guid.Parse("11111111-1111-1111-1111-111111111111");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            cases = await ApiClient.GetCasesAsync(tenantId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading cases: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateNewCase()
    {
        // TODO: Implement create dialog
    }

    private string GetStatusBadgeClass(CaseStatus status) => status switch
    {
        CaseStatus.Draft => "bg-secondary",
        CaseStatus.DemandSent => "bg-primary",
        CaseStatus.ResponseReceived => "bg-info",
        CaseStatus.Negotiating => "bg-warning text-dark",
        CaseStatus.Settled => "bg-success",
        CaseStatus.Closed => "bg-dark",
        CaseStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}
