@page "/cases"
@using SubrogationDemandManagement.Domain.Models
@using SubrogationDemandManagement.UI.Services
@inject SubrogationApiClient ApiClient
@inject ToastService ToastService

<PageTitle>Subrogation Cases</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Subrogation Cases</h1>
    <button class="btn btn-primary" @onclick="CreateNewCase">
        <span class="oi oi-plus" aria-hidden="true"></span> New Case
    </button>
</div>

<div class="mb-3">
    <div class="input-group">
        <span class="input-group-text"><span class="oi oi-magnifying-glass"></span></span>
        <input type="text" class="form-control" placeholder="Search by Claim ID or Policy Number..." @bind="searchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
    </div>
</div>

@if (isLoading)
{
    <SkeletonLoader Count="5" Class="p-4" />
}
else if (cases == null || !cases.Any())
{
    <div class="alert alert-info">No cases found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Policy Number</th>
                    <th>Loss Date</th>
                    <th>Status</th>
                    <th>Recovery Sought</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cases)
                {
                    <tr>
                        <td>@item.ClaimId</td>
                        <td>@item.PolicyNumber</td>
                        <td>@item.LossDate.ToShortDateString()</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(item.Status)">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.RecoverySought.ToString("C")</td>
                        <td>@item.CreatedAt.ToShortDateString()</td>
                        <td>
                            <a href="/cases/@item.CaseId" class="btn btn-sm btn-outline-primary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="PreviousPage">Previous</button>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Page @currentPage</span>
            </li>
            <li class="page-item @(cases.Count < pageSize ? "disabled" : "")">
                <button class="page-link" @onclick="NextPage">Next</button>
            </li>
        </ul>
    </nav>
}

@code {
    private List<SubrogationCase>? cases;
    private bool isLoading = true;
    private Guid tenantId = Guid.Parse("11111111-1111-1111-1111-111111111111");

    // Pagination & Search
    private int currentPage = 1;
    private int pageSize = 10;
    private string searchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCases();
    }

    private async Task LoadCases()
    {
        isLoading = true;
        try
        {
            // Note: Search is currently client-side filtered in this MVP or requires API update. 
            // We pass skip/take to API.
            int skip = (currentPage - 1) * pageSize;
            
            // For MVP, we fetch a bit more to filter client side or just fetch page
            // Ideally ApiClient.GetCasesAsync would accept a search term
            cases = await ApiClient.GetCasesAsync(tenantId, skip, pageSize);
            
            // Naive client-side search if API doesn't support it yet
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                cases = cases.Where(c => 
                    c.ClaimId.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || 
                    c.PolicyNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)).ToList();
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading cases: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSearch()
    {
        currentPage = 1; // Reset to page 1 on search
        await LoadCases();
    }

    private async Task NextPage()
    {
        currentPage++;
        await LoadCases();
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadCases();
        }
    }

    private void CreateNewCase()
    {
        ToastService.ShowInfo("Create functionality coming soon!");
    }

    private string GetStatusBadgeClass(CaseStatus status) => status switch
    {
        CaseStatus.Draft => "bg-secondary",
        CaseStatus.DemandSent => "bg-primary",
        CaseStatus.ResponseReceived => "bg-info",
        CaseStatus.Negotiating => "bg-warning text-dark",
        CaseStatus.Settled => "bg-success",
        CaseStatus.Closed => "bg-dark",
        CaseStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}
